# Global npm configuration
# This file will be symlinked to ~/.npmrc via stow

# Set global packages directory (optional)
# prefix=${HOME}/.npm-global

# Registry settings
registry=https://registry.npmjs.org/

# Cache settings
cache=${HOME}/.npm-cache

# Security settings
audit-level=moderate

# Progress settings
progress=true

# Save settings
save-exact=true

# Package-lock settings
package-lock=true

# Update notifier settings
update-notifier=true

# Timing settings
timing=true