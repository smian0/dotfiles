// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": "Zed (Default)",
  "language_models": {
    "openai_compatible": {
      // Using Together AI as an example
      "Ollama Turbo": {
        "api_url": "http://localhost:3304/v1",
        "available_models": [
          {
            "name": "deepseek-v3.1:671b",
            "display_name": "Deepseek Ollama Turbo",
            "max_tokens": 128000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          }
        ]
      }
    },
    "ollama": {
      "api_url": "http://localhost:3305",
      "available_models": [
        {
          "name": "deepseek-v3.1:671b",
          "display_name": "DeepSeek V3.1 671B (Turbo)",
          "max_tokens": 128000,
          "keep_alive": "120s",
          "supports_tools": true,
          "supports_thinking": true
        },
        {
          "name": "gpt-oss:120b",
          "display_name": "GPT OSS 120B (Turbo)",
          "max_tokens": 128000,
          "keep_alive": "120s",
          "supports_tools": true,
          "supports_thinking": true
        }
      ]
    }
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "single_file_review": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "minimap": {
    "show": "auto"
  },
  "preview_tabs": {
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": true,
    "enabled": true
  },
  "base_keymap": "VSCode",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  }
}
