// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_servers": {
    "your_agent": {
      "command": "path_to_executable",
      "args": [],
      "env": {}
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": "VSCode Icons Light",
  "language_models": {
    "openai_compatible": {
      // Using Together AI as an example
      "Ollama Turbo": {
        "api_url": "http://localhost:3304/v1",
        "available_models": [
          {
            "name": "deepseek-v3.1:671b",
            "display_name": "Deepseek Ollama Turbo",
            "max_tokens": 128000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          },
          {
            "name": "qwen3-coder:480b",
            "display_name": "Qwen3 Coder Turbo",
            "max_tokens": 128000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": true,
              "prompt_cache_key": true
            }
          }
        ]
      }
    },
    "ollama": {
      "api_url": "http://localhost:3305",
      "available_models": [
        {
          "name": "deepseek-v3.1:671b",
          "display_name": "DeepSeek V3.1 671B (Turbo)",
          "max_tokens": 128000,
          "keep_alive": "120s",
          "supports_tools": true,
          "supports_thinking": false,
          "capabilities": {
            "tools": true,
            "images": false,
            "parallel_tool_calls": false,
            "prompt_cache_key": false
          }
        },
        {
          "name": "gpt-oss:120b",
          "display_name": "GPT OSS 120B (Turbo)",
          "max_tokens": 128000,
          "keep_alive": "120s",
          "supports_tools": true,
          "supports_thinking": true
        },
        {
          "name": "qwen3-coder:480b",
          "display_name": "Qwen3 Coder Turbo",
          "max_tokens": 128000,
          "supports_tools": true,
          "supports_thinking": false,
          "capabilities": {
            "tools": true,
            "images": false,
            "parallel_tool_calls": false,
            "prompt_cache_key": false
          }
        }
      ]
    }
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "single_file_review": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "ollama",
      "model": "gpt-oss:120b"
    }
  },
  "minimap": {
    "enabled": true,
    "show_scrollbar": true
  },
  "preview_tabs": {
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": true,
    "enabled": true
  },
  "base_keymap": "VSCode",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "buffer_font_family": "Monaco",
  "buffer_line_height": "comfortable",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "project_panel": {
    "dock": "left",
    "default_width": 240
  },
  "terminal": {
    "dock": "bottom"
  },
  "outline_panel": {
    "dock": "right"
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "show_whitespaces": "selection",
  "show_wrap_guides": true,
  "wrap_guides": [80, 120],
  "cursor_blink": true,
  "relative_line_numbers": false,
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "runnables": true
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2
  },
  "scrollbar": {
    "show": "auto"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  }
}
